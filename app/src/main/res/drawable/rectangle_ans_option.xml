<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/gray_600" />
            <corners android:radius="@dimen/_5pxh" />
        </shape>
    </item>

    <!-- Original shape -->
    <item android:bottom="@dimen/_1pxh"
        android:left="@dimen/_1pxh"
        android:right="@dimen/_1pxh"
        android:top="@dimen/_1pxh">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_5pxh" />
        </shape>
    </item>

</layer-list>
