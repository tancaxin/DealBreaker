<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border shape with gradient -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/indigo_A700" />
            <corners android:radius="@dimen/_5pxh" />
        </shape>
    </item>

    <!-- Original shape -->
    <item android:bottom="@dimen/_2pxh"
        android:left="@dimen/_2pxh"
        android:right="@dimen/_1pxh"
        android:top="@dimen/_1pxh">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_5pxh" />
        </shape>
    </item>

</layer-list>
