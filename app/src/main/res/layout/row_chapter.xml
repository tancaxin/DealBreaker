<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recCardNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearUserprofile"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/_16pxv"
        android:paddingEnd="@dimen/_14pxh"
        android:paddingStart="@dimen/_14pxh"
        android:paddingTop="@dimen/_16pxv" style="@style/groupStyleyellow_100cornerRadius">
        <LinearLayout android:id="@+id/linearColumntime"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_2pxv"
            android:paddingEnd="@dimen/_13pxh"
            android:paddingStart="@dimen/_13pxh"
            android:paddingTop="@dimen/_2pxv" style="@style/groupStyleblue_gray_1">
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtTime"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                style="@style/txtPoppinsregular14" android:text="@string/lbl_6_min"/>
        </LinearLayout>
        <TextView android:ellipsize="end" android:id="@+id/txtTitle"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            style="@style/txtPoppinsbold18_1" android:text="@string/lbl_born_a_trader"/>

        <LinearLayout
            android:id="@+id/layoutGainOrLost1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_100pxh"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_vector_orange_200_01" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

