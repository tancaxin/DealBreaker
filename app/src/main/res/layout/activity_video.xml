<?xml version="1.0" encoding="UTF-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoActivity">

    <LinearLayout android:id="@+id/screen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylewhite_A700">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            android:elevation="5dp"
            style="@style/groupStyleblue_gray_800_02">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageArrowBack"
                    android:layout_width="16dp"
                    android:layout_height="30dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="24dp"
                    android:src="@drawable/img_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_arrow" />


                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtPoppinsbold20White"
                    android:text="@string/lbl_born_a_trader"
                    android:layout_height="wrap_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/frameIllustration"
            android:layout_height="@dimen/_228pxv"
            android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearRowiconarrowlef"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_4pxv"
                android:paddingEnd="@dimen/_5pxh"
                android:paddingStart="@dimen/_5pxh"
                android:paddingTop="@dimen/_4pxv"
                style="@style/groupStylered_100">

                <FrameLayout android:id="@+id/frameStack"
                    android:layout_height="@dimen/_216pxv"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="50dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <ImageView android:id="@+id/imageCartoon"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_216pxh"
                        android:layout_width="@dimen/_142pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_frame"
                        tools:ignore="ContentDescription" />

                    <ImageView android:id="@+id/imageButtonPlay"
                        android:layout_gravity="top|center"
                        android:layout_height="@dimen/_54pxh"
                        android:layout_marginTop="@dimen/_75pxv"
                        android:layout_width="@dimen/_56pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_button_play"
                        tools:ignore="ContentDescription" />

                </FrameLayout>

                <LinearLayout android:gravity="end"
                    android:id="@+id/linearColumniconOne"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_160pxv"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <ImageView android:id="@+id/imageIconOne"
                        android:layout_height="@dimen/_19pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_icon"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_icon"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtTime"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_23pxv"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        style="@style/txtPoppinsregular12" android:text="@string/lbl_6_00"/>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/frameStacklineOne"
                android:layout_gravity="bottom|center"
                android:layout_height="@dimen/_167pxv"
                android:layout_marginBottom="@dimen/_4pxv"
                android:layout_width="@dimen/_343pxh">

                <ImageView android:id="@+id/imageImageOne"
                    android:layout_gravity="top|start"
                    android:layout_height="@dimen/_154pxh"
                    android:layout_width="@dimen/_114pxh"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_group"/>
                <ImageView android:id="@+id/imageLine"
                    android:layout_gravity="bottom|center"
                    android:layout_height="@dimen/_1pxh"
                    android:layout_marginBottom="@dimen/_24pxv"
                    android:layout_width="@dimen/_355pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_line"
                    tools:ignore="ContentDescription"/>
                <ImageView android:id="@+id/imagePointOnLine"
                    android:layout_gravity="bottom|end"
                    android:layout_height="@dimen/_13pxh"
                    android:layout_marginBottom="@dimen/_18pxv"
                    android:layout_marginEnd="@dimen/_88pxh"
                    android:layout_width="@dimen/_14pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_140"
                    tools:ignore="ContentDescription" />
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTime1"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtPoppinsregular12"
                    android:text="@string/lbl_4_10"/>
            </FrameLayout>
        </FrameLayout>

        <ScrollView
            android:id="@+id/scrollViewScrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <LinearLayout android:id="@+id/linearTradeMain"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView android:ellipsize="end" android:gravity="start"
                    android:id="@+id/txtBornatraderOne"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_27pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    style="@style/txtPoppinsbold30"
                    android:text="@string/lbl_born_a_trader"/>
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_29pxh"
                    android:layout_marginStart="@dimen/_27pxh"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="@string/lbl_6_minutes"
                    android:textColor="@color/black_900"
                    style="@style/etPoppinsregular12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/gray_900_01" />

                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumnchatgpt"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginEnd="@dimen/_11pxh"
                    android:layout_marginStart="@dimen/_11pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10pxv"
                    android:paddingEnd="@dimen/_13pxh"
                    android:paddingStart="@dimen/_13pxh"
                    android:paddingTop="@dimen/_22pxv" style="@style/groupStyleblue_gray_800GPT_bg">
                    <LinearLayout android:id="@+id/linearBox4"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_3pxh"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:layout_width="250dp"
                        android:orientation="vertical"
                        style="@style/groupStylegray_100cornerRadius">
                        <TextView android:gravity="center_horizontal"
                            android:id="@+id/txtChatgpt"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_4pxh"
                            style="@style/txtPoppinsmedium16"
                            android:text="@string/msg_from_user"/>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/linearBox5"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_1pxh"
                        android:layout_marginTop="@dimen/_15pxv"
                        android:layout_width="250dp"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        style="@style/groupStylegray_100cornerRadius">
                        <TextView
                            android:id="@+id/txtChatgptisana"
                            style="@style/txtPoppinsmedium16"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:gravity="start"
                            android:lineSpacingExtra="@dimen/_4pxh"
                            android:text="@string/msg_chatgpt_is_an_a" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtThisisexampleth"
                        style="@style/txtPoppinsmedium16_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:lineSpacingExtra="@dimen/_4pxh"
                        android:text="@string/msg_this_is_example" />

                    <LinearLayout
                        android:id="@+id/linearEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20pxv"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/etPromptOne"
                            style="@style/etSolidRounded"
                            android:layout_width="305dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_bg_gray_50_radius_17"
                            android:drawableEnd="@drawable/img_scan"
                            android:drawablePadding="@dimen/_30pxh"
                            android:ellipsize="end"
                            android:hint="@string/msg_ask_me_anything"
                            android:inputType="text"
                            android:paddingStart="@dimen/_16pxh"
                            android:paddingTop="@dimen/_7pxv"
                            android:paddingEnd="@dimen/_8pxh"
                            android:paddingBottom="@dimen/_7pxv"
                            android:singleLine="true"
                            android:textColorHint="@color/gray_500"
                            tools:ignore="Autofill" />
                        <ImageButton
                            android:background="@drawable/rectangle_bg_cyan_400_radius_22"
                            android:id="@+id/btnButtonSend"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_45pxh"
                            android:layout_marginStart="@dimen/_10pxh"
                            android:layout_width="@dimen/_44pxh"
                            android:paddingHorizontal="@dimen/_7pxh"
                            android:paddingVertical="@dimen/_7pxv"
                            android:scaleType="fitCenter"
                            android:src="@drawable/img_button_send"
                            tools:ignore="ContentDescription"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btnNext"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/_21pxv"
                    android:layout_width="300dp"
                    android:paddingBottom="@dimen/_12pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_12pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_next" android:textAllCaps="false"
                    style="@style/btnNext" />





            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
