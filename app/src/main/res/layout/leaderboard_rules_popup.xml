<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/gray_300_transparent">
    <FrameLayout android:id="@+id/frameTradingGuidance"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <LinearLayout android:id="@+id/linearColumnmoneybag"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_29pxv"
            android:paddingEnd="@dimen/_14pxh"
            android:paddingStart="@dimen/_14pxh"
            android:paddingTop="@dimen/_29pxv" style="@style/groupStyleindigo_2">

            <LinearLayout android:id="@+id/linearRule1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_37pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMoneybagOne"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_width="@dimen/_27pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_money_bag_perspective_matte"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_money_bag_perspective_matte"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRule1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    style="@style/txtPoppinssemibold15"
                    android:text="Leaderboard results are calculated from the total weekly trading profit/loss."/>

            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRule2"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imageClock"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_width="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_clock_perspective_matte"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRule2"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    style="@style/txtPoppinssemibold15"
                    android:text="The leaderboard resets every Sunday at 11:30 AM (GMT+8)."/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearTime"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imagePrize"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_width="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription"
                    android:src="@drawable/img_prizes"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRule3"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    style="@style/txtPoppinssemibold15"
                    android:text="Top 10 Players(every week) are given $2000 each as a reward."/>
            </LinearLayout>

            <TextView android:ellipsize="end"
                android:id="@+id/txtAdvice"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5pxv"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent"
                style="@style/txtPoppinssemibold14_1"
                android:text="Do your best, start trading!"/>



        </LinearLayout>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp" style="@style/groupStyleyellow_50cornerRadius">
            <FrameLayout android:id="@+id/frameStacktrading"
                android:layout_height="@dimen/_39pxv"
                android:layout_marginBottom="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_51pxh"
                android:layout_marginStart="@dimen/_51pxh"
                android:layout_marginTop="@dimen/_19pxv"
                android:layout_width="match_parent">
                <TextView android:ellipsize="end"
                    android:gravity="top|start"
                    android:id="@+id/txtTrading"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:singleLine="true"
                    style="@style/txtPoppinsextrabold25"
                    android:text="Leaderboard Rules"/>
                <TextView android:ellipsize="end"
                    android:gravity="top|start"
                    android:id="@+id/txtTradingOne"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    style="@style/txtPoppinsextrabold25_1"
                    android:text="Leaderboard Rules"/>
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
</RelativeLayout>
